    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "screenshots"
    },
    "categories": {
      "collection": "category",
      "via": "screenshots",
      "dominant": true
    },
    "comment": {
      "model": "comment",
      "via": "screenshots"
    },
    "like": {
      "type": "component",
      "repeatable": false,
      "component": "shared-datas.like"
    },
    "game": {
      "model": "game",
      "via": "screenshots"
    }
