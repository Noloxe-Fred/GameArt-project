{
  "kind": "collectionType",
  "collectionName": "games",
  "info": {
    "name": "Game"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "screenshots": {
      "via": "game",
      "collection": "screenshot"
    }
  }
}
